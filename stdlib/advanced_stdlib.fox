# advanced_stdlib.fox - Advanced stdlib with I/O (Python built-ins equivalent)
ambil "io"

# print() equivalent - already have io.Write, but make it simpler
fungsi stdlib_print(message string) void
    io.Write(io.Stdout, message)
    io.Write(io.Stdout, "\n")
akhir

# input() equivalent (simplified)
fungsi stdlib_input(prompt string) string
    io.Write(io.Stdout, prompt)
    # In real implementation, would read from stdin
    # For demo, return fixed response
    kembali "user_input"
akhir

# chr() equivalent - character from code
fungsi stdlib_chr(code int) string
    jika code == 65
        kembali "A"
    atau_jika code == 97
        kembali "a"
    atau_jika code == 48
        kembali "0"
    atau_jika code == 32
        kembali " "
    lainnya
        kembali "?"
    akhir
akhir

# ord() equivalent - code from character
fungsi stdlib_ord(char string) int
    jika char == "A"
        kembali 65
    atau_jika char == "a"
        kembali 97
    atau_jika char == "0"
        kembali 48
    atau_jika char == " "
        kembali 32
    lainnya
        kembali 63  # '?' character
    akhir
akhir

# bin() equivalent - binary representation
fungsi stdlib_bin(x int) string
    jika x == 0
        kembali "0b0"
    atau_jika x == 1
        kembali "0b1"
    atau_jika x == 2
        kembali "0b10"
    atau_jika x == 3
        kembali "0b11"
    atau_jika x == 4
        kembali "0b100"
    atau_jika x == 8
        kembali "0b1000"
    lainnya
        kembali "0bN"
    akhir
akhir

# hex() equivalent - hexadecimal representation
fungsi stdlib_hex(x int) string
    jika x == 0
        kembali "0x0"
    atau_jika x == 10
        kembali "0xa"
    atau_jika x == 15
        kembali "0xf"
    atau_jika x == 16
        kembali "0x10"
    atau_jika x == 255
        kembali "0xff"
    lainnya
        kembali "0xN"
    akhir
akhir

